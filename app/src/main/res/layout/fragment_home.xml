<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:descendantFocusability="blocksDescendants">
            <Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                app:layout_scrollFlags="scroll|enterAlways"
                tools:targetApi="lollipop">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TVshows"
                    android:layout_marginRight="20dp"
                    android:textSize="17dp"
                    android:padding="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movies"
                    android:layout_marginRight="20dp"
                    android:textSize="17dp"
                    android:padding="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/mylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My List"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    />
            </Toolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/relbig"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/bigPic"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/boldname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kkkkkkkkk"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginLeft="40dp"
                    android:translationY="120dp"
                    android:textColor="@color/white"
                    android:background="@color/kk"
                    />
                <Button
                    android:layout_marginLeft="40dp"
                    android:translationY="120dp"
                    android:layout_below="@+id/boldname"
                    android:id="@+id/playy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play"
                    android:textSize="15dp"/>


            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/downloadedFilms"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:scrollbars="horizontal"
                android:visibility="gone"
                android:focusable="auto"
                android:focusableInTouchMode="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movierecview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="Last Watched"
                android:visibility="gone"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lws"
                android:visibility="gone"
                android:layout_marginBottom="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/seriesrecview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:focusable="auto"
                android:focusableInTouchMode="true"

                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>